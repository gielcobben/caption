{
  "name": "caption",
  "description": "Find the right subtitles. Easy.",
  "author": {
    "name": "Giel Cobben",
    "email": "g.cobben@gmail.com",
    "url": "https://gielcobben.com"
  },
  "productName": "Caption",
  "version": "2.0.0-alpha",
  "main": "main/index.js",
  "license": "MIT",
  "repository": "gielcobben/Caption",
  "scripts": {
    "start": "electron --inspect=5858 .",
    "build": "npm run test && next build renderer && next export renderer",
    "dist": "npm run build && build --mac",
    "publish":
      "npm run build && node -r dotenv/config node_modules/.bin/build --mac -p always",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "babel-preset-stage-0": "^6.24.1",
    "electron": "latest",
    "electron-builder": "^19.37.2",
    "jest": "^20.0.4",
    "next": "4.1.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-test-renderer": "^16.0.0"
  },
  "dependencies": {
    "addic7ed-api": "^1.3.2",
    "app-root-path": "2.0.1",
    "bluebird": "^3.5.1",
    "electron-dl": "^1.10.0",
    "electron-is-dev": "0.3.0",
    "electron-next": "3.1.1",
    "electron-store": "^1.3.0",
    "electron-updater": "^2.15.0",
    "electron-window-state": "^4.1.1",
    "lodash": "^4.17.4",
    "opensubtitles-api": "latest",
    "react-dropzone": "^4.1.0"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "gielcobben",
        "repo": "Caption"
      }
    ],
    "files": ["**/*", "!.env", "!renderer", "renderer/out"],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "./renderer/static/icon.icns"
    },
    "linux": {
      "target": ["deb"],
      "icon": "./renderer/static/icon.iconset/"
    },
    "win": {
      "target": ["nsis"],
      "icon": "./renderer/static/icon.ico"
    }
  }
}
